		<link href="https://fonts.googleapis.com/css?family=Varela+Round" rel="stylesheet">
  </head>

	<body>
		<header>
			<%= render 'shared/header' %>
		</header>
		
		<main>
			<div class="container">
				<% flash.each do |name, msg| %>
					<%= content_tag :div, msg, class: "alert alert-#{name}" %>
				<% end %>

				
		    <%= yield %>					
			</div>
		</main>

		<footer>
			
		</footer>	
	</body>

</html>
